<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pairedDevicesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paired devices:"
        android:textSize="24sp"
        android:layout_alignParentTop="true">
    </TextView>

    <ListView
        android:id="@+id/pairedDevicesListView"
        android:layout_below="@+id/pairedDevicesText"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </ListView>

    <Button
        android:id="@+id/searchDevicesButton"
        android:layout_below="@+id/pairedDevicesListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Search devices:">
    </Button>

    <TextView
        android:id="@+id/devicesFoundText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devices found:"
        android:textSize="24sp"
        android:layout_below="@+id/searchDevicesButton">
    </TextView>

    <ListView
        android:id="@+id/searchedDevices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:layout_below="@+id/devicesFoundText">
    </ListView>

</RelativeLayout>